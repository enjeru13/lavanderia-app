{
  "name": "lavanderia-app",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "print-server",
    "shared"
  ],
  "devDependencies": {
    "typescript": "^5.8.3"
  },
  "scripts": {
    "install:all": "npm install",
    "build:shared": "npm run --workspace=shared build",
    "build": "npm run build:shared && npm run --workspaces --if-present build",
    "dev": "npm run --workspaces --if-present dev"
  }
}