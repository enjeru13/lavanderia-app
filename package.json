{
  "name": "lavanderia-app",
  "private": true,
  "devDependencies": {
    "typescript": "^5.8.3"
  },
  "scripts": {
    "dev": "pnpm --parallel --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm --filter @lavanderia/shared build && pnpm --filter backend build && pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build"
  },
  "dependencies": {
    "dayjs": "^1.11.13"
  }
}
