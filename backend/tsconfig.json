{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@lavanderia/shared": ["../shared/dist"],
      "@lavanderia/shared/*": ["../shared/dist/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
