{
  "name": "backend",
  "version": "1.0.0",
  "main": "build/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "pnpm --filter @lavanderia/shared build && npx prisma generate && tsc -p tsconfig.json",
    "start": "node build/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init"
  },
  "dependencies": {
    "@lavanderia/shared": "workspace:*",
    "@prisma/client": "^6.13.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "zod": "^3.25.75"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "node-gyp": "^9.4.1",
    "prisma": "^6.13.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}